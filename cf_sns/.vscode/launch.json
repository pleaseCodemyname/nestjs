  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug NestJS",
      "runtimeExecutable": "npm", // 어떤걸로 실행? ex) yarn, npm 등
      "runtimeArgs": ["run", "start:debug"], // npm run start:dev 중 npm = runtime, run star:dev = Args
      "console": "integratedTerminal", // vscode 터미널을 사용해서 실행하
      "restart": true, // 연결 끊겼을 떄 다시 연결 재시작 할껀지
      "port": 9229,
      "autoAttachChildProcesses": true // 디버거를 자동으로 프로세스에 붙을지 말지 결정
    }
  ]
}
